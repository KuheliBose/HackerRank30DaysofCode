#include <cmath>
#include <cstdio>
#include <vector>
#include <iostream>
#include <algorithm>
using namespace std;


int main() {
    double mealCost;
    cin >> mealCost;
    int tipPercent;
    cin >> tipPercent;
    int taxPercent;
    cin >> taxPercent;
    
    double tip = 12 * (double)tipPercent/100;
    double tax = 12 * (double)taxPercent/100;
    double tCost = mealCost + tip +tax ;
    int totalCost = round(tCost);
    cout << "The total meal cost is "<< totalCost <<" "<< "dollars."<<endl;
    return 0;
}
