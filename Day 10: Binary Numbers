#include <map>
#include <set>
#include <list>
#include <cmath>
#include <ctime>
#include <deque>
#include <queue>
#include <stack>
#include <string>
#include <bitset>
#include <cstdio>
#include <limits>
#include <vector>
#include <climits>
#include <cstring>
#include <cstdlib>
#include <fstream>
#include <numeric>
#include <sstream>
#include <iostream>
#include <algorithm>
#include <unordered_map>

using namespace std;



int main(){
	int n;
   	cin >> n;
   	vector<int> bin;
   	int max = 0;
   	while(n != 0) {
       		int remainder = n % 2;
       		n = n/2;
       		bin.push_back(remainder);
   	}
   	reverse(bin.begin(), bin.end());
   	
   	int count1=0;
   	for (int j=0 ; j<bin.size() ; ++j) {
   		if (bin.at(j)==1) {
            count1 ++;
            
            if(count1 > max )
                max = count1;
        }
            else
                count1 = 0;
    }
    cout << max << endl;
    
}
   
